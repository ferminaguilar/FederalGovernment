{
  "name": "Drupal PHP 8.3 (Compose)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },
  "containerEnv": {
    "DB_NAME": "drupal",
    "DB_USER": "drupal",
    "DB_PASS": "drupal",
    "DB_HOST": "db",
    "DB_PORT": "3306"
  },
  "postCreateCommand": "sudo docker-php-ext-install pdo_mysql && composer install"
}